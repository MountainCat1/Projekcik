@model IEnumerable<TodoListWebApplication.Models.TodoListTable>

@{
    ViewBag.Title = "Zadania do wykonania";
}

<h2>Zadania do wykonania</h2>

<p>
    @Html.ActionLink("Dodaj zadanie", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Zadanie)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wykonane)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Zadanie)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wykonane)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Detale", "Details", new { id=item.Id }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<h3>@ViewBag.Message</h3>